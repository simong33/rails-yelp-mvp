<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
    <h1 class="text-center">Write a review for <%= @restaurant.name %></h1>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: Review::RATINGS %>
        <%= f.input :restaurant_id, input_html: { value: @restaurant.id }, as: :hidden %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
