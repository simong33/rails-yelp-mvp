<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
    <h1 class="text-center">Create a new restaurant</h1>
      <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :category, collection: Restaurant::CATEGORIES %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
